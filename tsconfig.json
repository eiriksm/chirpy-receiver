{
    "compilerOptions": {
      "esModuleInterop": true,
      "skipLibCheck": true,
      "allowJs": true,
      "moduleDetection": "force",
      "isolatedModules": true,
      "verbatimModuleSyntax": true,
      "strict": true,
      "noUncheckedIndexedAccess": true,
      "noImplicitOverride": true,
      "module": "es6",
      "target": "es5",
      "outDir": "dist",
      "rootDir": "src",
      "sourceMap": true,
      "declaration": true
    }
  }
